package com.api.service.entity.composite;

import java.io.Serializable;
import java.util.Date;
import java.util.Objects;
import java.util.UUID;

import com.api.service.entity.base.CompositeEntity;

import jakarta.persistence.Column;
import jakarta.persistence.Embeddable;

public class UserKey extends CompositeEntity implements Serializable {

	private static final long serialVersionUID = 6577517727325198707L;

	@Column(name = "IS_ADMIN")
	private boolean isAdmin;

	@Column(name = "EMAIL")
	private String email;

	public UserKey(UUID id, Date createdDate, String createdBy, Date lastModifiedDate, String lastModifiedBy) {
		super(id, lastModifiedDate, lastModifiedBy, lastModifiedDate, lastModifiedBy);
	}

	public UserKey(UUID id, Date createdDate, String createdBy, Date lastModifiedDate, String lastModifiedBy,
			boolean isAdmin, String email) {
		super(id, lastModifiedDate, lastModifiedBy, lastModifiedDate, lastModifiedBy);
		this.isAdmin = isAdmin;
		this.email = email;
	}

	public UUID getRoleId() {
		return roleId;
	}

	public void setRoleId(UUID roleId) {
		this.roleId = roleId;
	}

	public UUID getMenuId() {
		return menuId;
	}

	public void setMenuId(UUID menuId) {
		this.menuId = menuId;
	}

	@Override
	public boolean equals(Object obj) {
		if (obj == this)
			return true;
		if (obj == null || obj.getClass() != getClass())
			return false;
		UserKey castedObj = (UserKey) obj;
		return roleId.equals(castedObj.roleId) && menuId.equals(castedObj.menuId);
	}

	@Override
	public int hashCode() {
		return Objects.hash(roleId, menuId);
	}

}
