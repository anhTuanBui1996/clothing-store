package com.api.service.entity.composite;

import java.io.Serializable;
import java.sql.Date;
import java.util.Objects;
import java.util.UUID;

import com.api.service.entity.CompositeEntity;

import jakarta.persistence.Column;
import jakarta.persistence.Embeddable;

@Embeddable
public class PermissionKey extends CompositeEntity implements Serializable {

	private static final long serialVersionUID = 6577517727315198707L;

	@Column(name = "ROLE_ID")
	private UUID roleId;

	@Column(name = "MENU_ID")
	private UUID menuId;

	public PermissionKey(UUID id, Date createdDate, String createdBy, Date lastModifiedDate, String lastModifiedBy) {
		super(id, lastModifiedDate, lastModifiedBy, lastModifiedDate, lastModifiedBy);
	}

	public PermissionKey(UUID id, Date createdDate, String createdBy, Date lastModifiedDate, String lastModifiedBy,
			UUID roleId, UUID menuId) {
		super(id, lastModifiedDate, lastModifiedBy, lastModifiedDate, lastModifiedBy);
		this.roleId = roleId;
		this.menuId = menuId;
	}

	public UUID getRoleId() {
		return roleId;
	}

	public void setRoleId(UUID roleId) {
		this.roleId = roleId;
	}

	public UUID getMenuId() {
		return menuId;
	}

	public void setMenuId(UUID menuId) {
		this.menuId = menuId;
	}

	@Override
	public boolean equals(Object obj) {
		if (obj == this)
			return true;
		if (obj == null || obj.getClass() != getClass())
			return false;
		PermissionKey castedObj = (PermissionKey) obj;
		return roleId.equals(castedObj.roleId) && menuId.equals(castedObj.menuId);
	}

	@Override
	public int hashCode() {
		return Objects.hash(roleId, menuId);
	}

}
